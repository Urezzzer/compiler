<Statement> -> <If-statement> | <Loop> | <Declaration> | <Assignment>
<Declaration> -> <Data-Type> <Assignment> | <Data-Type> <Assignment-Function>
<Assignment> -> <Identifier> = <Expression>;
<Data-Type> -> int | boolean | float |  string | char | double | void

<If-statement> -> if (<conditional>) {<Statement>} <Else>
<Else> -> else {<Statement>;| ;

<Conditional> -> <Expression> <Conditional-Operator> <Expression>
<Conditional-Operator> -> "==" | "<=" | ">=" | "!=" | > | <

<Loop> -> <While-loop>| <While-do-loop> <For-loop>
<For-loop> -> for(<Declaration>;<conditional>; <Declaration>) {<Statement>};
<While-do-loop> -> while { <Statement> } do (<conditional>);
<While-loop> -> while (<conditional>) { <Statement> };

<Expression> -> <Term> <Expression-Prime>
<Expression-Prime> -> + <Term> <Expression-Prime> | - <Term> <Expression-Prime> | epsilon
<Term> -> <Factor> <Term-Prime>
<Term-Prime> -> * <Factor> <Term-Prime> | / <Factor> <Term-Prime> | epislon
<Factor> -> (<Expression>) | <Identifier> | <Integer> | <Float> | <Boolean> | <String>

<Separator> -> } | ) | ( | {

<Identifier> -> (Aa-Zz)(Aa-Zz0-9$)*
<Integer> -> (0-9)+
<Float> -> (0-9)+.(0-9)+
<Boolean> -> true | false
<String> -> ([special_symbols]Aa-Zz0-9$)+